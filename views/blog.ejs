<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <%- include('./partials/head') %>
    <title>Blog</title>
</head>
<body>
    <%- include('./partials/nav') %>
    <div class="container mt-4">
        <h1><%= blog.title %></h1>
        <img src="<%= blog.coverImageURL %>" width="200px"/>
        <pre><%= blog.body %></pre>
    </div>
    <div class="container mt-4">
        <img src="<%= blog.createdBy.profileImage %>" width="50px"/>
        <p><%= blog.createdBy.fullName %></p>
    </div>
    <div class="container mt-3">
        <h1>Comment</h1>
        <% if (locals.user) { %>
            <form action="/blog/comment/<%= blog._id %>" method="post">
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label" aria-placeholder="Enter Your Comments">Comment</label>
                    <input type="text" class="form-control"  name="content"/>
                    <button class="btn btm-sm btn-primary" type="submit">Add</button>
                </div>
            </form>
            <div class="mt-3">
                <% comments.forEach(comment => { %>
                    <img src="<%= comment.createdBy.profileImage %>" width="50px"/>
                    <%= comment.createdBy.fullName %>:<pre><%= comment.content %></pre>
                <% }) %>

            </div>
        <% } %>
       
    </div>

    <%- include('./partials/script') %>
   
    
</body>
</html>